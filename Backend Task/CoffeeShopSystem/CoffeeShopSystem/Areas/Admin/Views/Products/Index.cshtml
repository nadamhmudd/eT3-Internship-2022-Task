@using CoffeeShopSystem.Constant

@model IEnumerable<CoffeeShopSystem.Models.Entities.Product>

@{
    ViewData["Title"] = "Coffee Shop Menu";
}

<h1>Menu</h1>

@if(User.IsInRole(SD.Role_Admin))
{
    <p>
        <a asp-action="Create">New Product</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmallCupSize_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediumCupSize_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LargeCupSize_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraLargeCupSize_Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SmallCupSize_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediumCupSize_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LargeCupSize_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraLargeCupSize_Price)
            </td>
            @if (User.IsInRole(SD.Role_Admin))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }
            </tr>
}
    </tbody>
</table>
